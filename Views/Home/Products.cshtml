@{
    ViewData["Title"] = "Products";
}
@model Product
<div class="col">
    <div class="d-flex flex-column align-items-center mb-3 border-bottom border-dark">
        <h1> Products | <a href="/categories">Categories</a></h1>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-center">New Product</h2>          
            <form action="/products/create" method="post" class="col">
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-4 col-form-lablel"></label>
                    <div class="col-sm-8">
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-4 col-form-lablel"></label>
                    <div class="col-sm-8">
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Price" class="col-sm-4 col-form-lablel"></label>
                    <div class="col-sm-8">
                        <input asp-for="Price" class="form-control" type="number" step="0.01">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>      
        </div>
        <div class="col-md-6">
            <h2 class="text-center">Existing Products</h2>
            @foreach (var p in ViewBag.Products)
            {
                <a href="/product/@p.ProductId">@p.Name</a>
            }
        </div>
    </div>
</div>
