@{
    ViewData["Title"] = "Categories";
}
@model Category
<div class="col">
    <div class="d-flex flex-column align-items-center mb-3 border-bottom border-dark">
        <h1> <a href="/products">Products</a>| Categories</h1>
    </div>
</div>
<div class="row">
        <div class="col-md-6">
            <h2 class="text-center">New Categories</h2>          
            <form action="/categories/create" method="post" class="col">
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-4 col-form-lablel"></label>
                    <div class="col-sm-8">
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>      
        </div>
        <div class="col-md-6">
            <h2 class="text-center">Existing Categories</h2>
            @foreach (var c in ViewBag.Categories)
            {
                <p><a href="/category/@c.CategoryId">@c.Name</a></p> 
            }
        </div>
    </div>