@{
    ViewData ["Title"] = ViewBag.ChoosenOne.Name;
}
@model Association
<div class="col">
    <div class="d-flex flex-column align-items-center mb-3 border-bottom border-dark">
        <h1>@ViewBag.ChoosenOne.Name</h1>
    </div>
    <div class="row">
        <div class="col">
            <h2>Categories:</h2>
            @foreach (var c in ViewBag.ChoosenOne.AllCategories)
            {
                <p>@c.CategoryDetails.Name</p>
            }
        </div>
        <div class="col">
            @if(ViewBag.Categories.Count != 0)
            {
            <form action="/product/@ViewBag.ChoosenOne.ProductId/add" method="post" class="form-group">
                <label asp-for="CategoryId">Other Categories:</label>
                <select asp-for="CategoryId">
                    @foreach (var c in ViewBag.Categories)
                    {
                        <option value="@c.CategoryId">@c.Name</option>
                    }
                </select>
                <input asp-for="ProductId" value="@ViewBag.ChoosenOne.ProductId" type="hidden">
                <button class="btn btn-primary">Add</button>
            </form>
            }
        </div>
    </div>
</div>